<%= form_for(@event, url: choose_new_or_edit) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= @event.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4><%= f.label :タイトル %></h4>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <h4><%= f.label :内容 %></h4>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: "square_btn" %>
<% end %>
  <br>
<%= link_to "日記一覧画面にもどる", events_path, class: "square_btn" %>
