<% @result.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
      <div class="box18">
      <p><%= profile_img(user) %></p>
      <p>USERNAME:<%= user.name %></p>
      <% if user.id != current_user.id %>
         <div class="item">
           <p>FOLLOWER関係一覧：<%= link_to user.name, user %></p>
           <p><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></p>
         </div>
         <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
      <% end %>
    </div>
  </div>
<% end %>
